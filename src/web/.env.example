# API Configuration
# Base URL for REST API endpoints (required)
# Must be a valid HTTPS URL
VITE_API_URL=https://api.trading-bot.example.com/v1

# WebSocket Configuration
# Base URL for WebSocket connections (required)
# Must be a valid WSS URL
VITE_WS_URL=wss://ws.trading-bot.example.com/v1

# Application Information
# Application name for display purposes (required)
# Must be a non-empty string
VITE_APP_NAME=AI Trading Bot

# Application version for display and debugging (required)
# Must follow semantic version format
VITE_APP_VERSION=1.0.0

# API Request Settings
# Default API request timeout in milliseconds (required)
# Must be a positive integer, maximum 60000
VITE_API_TIMEOUT=30000

# WebSocket Settings
# WebSocket reconnection interval in milliseconds (required)
# Must be a positive integer, minimum 1000
VITE_WS_RECONNECT_INTERVAL=5000

# WebSocket heartbeat interval in milliseconds (required)
# Must be a positive integer, minimum 5000
VITE_WS_HEARTBEAT_INTERVAL=30000

# Data Refresh Rates
# Market data refresh rate in milliseconds (required)
# Must be a positive integer, minimum 100
VITE_MARKET_DATA_REFRESH_RATE=1000

# Portfolio data refresh rate in milliseconds (required)
# Must be a positive integer, minimum 1000
VITE_PORTFOLIO_REFRESH_RATE=5000

# Feature Flags
# Enable/disable trading functionality (required)
# Must be a boolean value
VITE_ENABLE_TRADING=true

# Enable/disable analytics (required)
# Must be a boolean value
VITE_ENABLE_ANALYTICS=true

# Logging Configuration
# Application logging level (required)
# Must be one of: debug, info, warn, error
VITE_LOG_LEVEL=info